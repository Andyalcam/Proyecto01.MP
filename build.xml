<?xml version="1.0" encoding="UTF-8" ?>
<project>
    <target name="clean">
        <delete dir="docs"/>
        <delete dir="build"/>
    </target>

    <target name="build">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes" debug="true" debuglevel="lines,vars,source"/>
    </target>

    <target name="jar">
        <antcall target="build"/>
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/Main.jar" basedir="build/classes">
            <manifest>
                <attribute name="DependencyFinder" value="main"/>
                <attribute name="Main-Class" value="Java.Clima.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/Main.jar" fork="true"/>
    </target>


    <target name="doc">
        <mkdir dir="docs"/>
        <javadoc sourcepath="src/classes" destdir="docs" access="private" author="true" windowtitle="Clima"
                 doctitle="Clima" version="true">
            <classpath/>
        </javadoc>
    </target>

</project>